<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFCE9"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutResumenTar"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight="0.3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textNominaTarjeta"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/nomina"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textAnioTarjeta"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            android:text="@string/anio"
            android:textColor="#000000"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/spinnerResumenNominaTarjeta"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/fondo_spinner"
            android:paddingLeft="10dp"
            android:prompt="@string/textoNominas" />

        <Spinner
            android:id="@+id/spinnerResumenAnioTarjeta"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/fondo_spinner"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:prompt="@string/textoAnios" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textFiltroTarjeta"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="@string/mostrarPor"
            android:textColor="#000000"
            android:textSize="16dp" />

        <Spinner
            android:id="@+id/spinnerResumenFiltroTarjeta"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/fondo_spinner"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:prompt="@string/tipoFiltro" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textFiltroTarjeta2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:text="@string/tarjeta"
            android:textColor="#000000"
            android:textSize="16dp" />

        <Spinner
            android:id="@+id/spinnerResumenFiltroTarjeta2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/fondo_spinner"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:prompt="@string/tipoFiltro" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:background="#000000"
        android:orientation="vertical" >

        <ExpandableListView
            android:id="@+id/listaMovimientosCategoriaTarjeta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:groupIndicator="@null"
            android:visibility="invisible" />

        <ListView
            android:id="@+id/listaMovimientosTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="#000000"
        android:gravity="right|bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textTotalTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textValorGastosTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/total"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textBarra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textValorNominaTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/total"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>